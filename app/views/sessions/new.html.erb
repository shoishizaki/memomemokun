<h1>Login</h1>
<%= form_for(:session, url: login_path) do |f| %>
<div class="input-field col s12">
  <input id="email" type="email" name="session[email]" class="validate">
  <label for="email">Email</label>
</div>
<div class="input-field col s12">
  <input id="password" type="password" name="session[password]" class="validate">
  <label for="password">Password</label>
</div>
<button class="btn waves-effect waves-light" action="/sessions" method="post">Login</button>
<% end %>