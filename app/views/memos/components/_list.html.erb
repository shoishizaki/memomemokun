<div class="col s8" >
  <h5>メモ一覧</h5>
  <div class="divider"></div>
  <div class="memo-card">
    <% @index.each do |m| %>
      <div class="row">
        <div class="col s11">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= m.category %></span>
              <p style="white-space: pre-line;"><%= m.content %></p>
            </div>
            <div class="card-action">
              <a href="#">編集</a>
              <%= link_to "削除", memos_path(id: m.id), method: :delete, data: {confirm: "削除しますか？"} %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>